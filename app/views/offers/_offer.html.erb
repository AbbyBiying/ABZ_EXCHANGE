<div class="listing">
  <ul>
    <li>
      <%= link_to offer.user do %>
        <div class="listing-image">
          <%= image_tag offer.url %>
        </div>

        <div class="listing-description">
          <p><strong>Offer: </strong><%= offer.name %>
          <p><strong>Description: </strong><%= offer.description %></p>
      <% end %>
          <p>posted by<%= link_to offer.username, offer.user %></p>
          <p>was created at <%= offer.created_time %></p>
        </div>
    </li>

    <li>
      <% if @user == current_user %>
        <b class="edit-offer">
          <%= link_to "Edit", edit_listing_offer_path(offer.listing, offer) %>
        </b>
        <b class="edit-offer">
          <%= link_to "Delete", listing_offer_path(offer.listing, offer), method: :delete, data: { confirm: 'Are you sure you want to delete this offer?' } %>
        </b>
      <% end %>

      <% if !offer.accepted? && current_user.can_accept?(offer.listing) %>
        <p><%= button_to "ACCEPT", accept_offer_path(offer), data: { confirm: 'Are you sure you want to accept this offer?'} %></p>
      <% end %>

      <%= flash[:notice] %>
    </li>
  </ul>
</div>

