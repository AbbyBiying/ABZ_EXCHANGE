<div class="content-group">
  <ul>
    <li>
      <%= link_to offer.user do %>
        <div class="content-image">
          <%= image_tag offer.avatar.url if offer.avatar? %>
        </div>

        <div>
          <p class="content-name">Offer: <%= offer.name %></p>
          <p>Description: <%= offer.description %></p>
      <% end %>
          <p>posted by <%= link_to offer.username, offer.user %></p>

        <% if current_user == offer.listing.user %>
          <p>email: <%= offer.user.email %></p>
        <% end %>

          <p>was created on <%= offer.created_time %></p>
        </div>
    </li>

    <li>
      <% if @user == current_user %>
        <%= link_to "Edit", edit_listing_offer_path(offer.listing, offer), class: "button" %>
        <%= link_to "Delete", listing_offer_path(offer.listing, offer), method: :delete, class: "button", data: { confirm: 'Are you sure you want to delete this offer?' } %>
        </b>
      <% end %>

      <% if !offer.accepted? && current_user.can_accept?(offer.listing) %>
        <p><%= button_to "ACCEPT", accept_offer_path(offer), class: "button", data: { confirm: 'Are you sure you want to accept this offer?'} %></p>
      <% end %>

      <%= flash[:notice] %>
    </li>
  </ul>
</div>

