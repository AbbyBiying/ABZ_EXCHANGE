<h2>Offer name: <%= @offer.name %></h2>
<h3>Offer description: <%= @offer.description %></h3>
<%= image_tag @offer.url, width:"100" %>
<p>This offer was created at <%= @offer.created_time %></p>
<p>Offer made by user: <b class="username"><%= link_to @offer.user.username, @offer.user %></b></p>

<div>
  <%= button_to "Edit this offer 编辑", edit_offer_path(@offer), method: :get %>
</div>

<div>
  <%= button_to "Delete this offer 删除", offer_path(@offer),
    method: :delete,
    data: { confirm: 'Are you sure you want to delete this offer?' } %>
</div>
<br>

<div>
<% unless @offer.user == current_user %>
  <h3>Make an counter offer</h3>
  <%= form_for [@offer, @counter_offer] do |form| %>
    <div>
      <%= form.text_field :name, placeholder: "type name here"%>
    </div>

    <div>
      <%= form.text_area :description, placeholder: "type description here" %>
    </div>

    <div>
      <%= form.text_field :url, placeholder: "type url here" %>
    </div>
    <%= form.submit %>
  <% end %>
<% end %>

</div>
<%= render @offer.counter_offers %>
