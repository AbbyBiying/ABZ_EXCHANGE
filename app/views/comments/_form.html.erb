<div class="new-form">
  <%= form_for comment do |c| %>
    <%= render "application/form_errors", object: comment %>
    
    <div class="input-container">
      <%= c.hidden_field :commentable_type, value: commentable.class %>
      <%= c.hidden_field :commentable_id, value: commentable.id %>
    </div>

    <div class="input-container">
      <%= c.label :body %>
      <%= c.text_area :body %>
    </div>

    <div class="submit-button">
      <%= c.button "Submit", :class => "button" %>
    </div>
  <% end %>
</div>