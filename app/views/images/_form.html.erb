<%= form_for image do |form| %>
  <div>
    <%= form.label :name, "Image name: " %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :description, "Image description: " %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :url, "Image url: " %>
    <%= form.text_field :url %>
  </div>
  <%= form.submit %>
<% end %>
