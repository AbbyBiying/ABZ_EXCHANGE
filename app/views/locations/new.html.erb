<%= form_for @location do |f| %>
  <%= render "application/form_errors", object: @location %>
  <h3>Add a Location: </h3>

  <%= f.label :city %>
  <%= f.text_field :city %>

  <%= f.label :state %>
  <%= f.text_field :state %>

  <%= f.label :country %>
  <%= f.text_field :country %>

  <%= f.submit %>
<% end %>
