<div class="new-location">
  <%= form_for @location do |f| %>
    <%= render "application/form_errors", object: @location %>

    <p>Add a new location</p>

    <%= f.label :city %>
    <%= f.text_field :city %>

    <%= f.label :state %>
    <%= f.text_field :state %>

    <%= f.label :country %>
    <%= f.text_field :country %>

    <%= f.submit %>
  <% end %>

  <div id="map"></div>
</div>
  <script>
    buildMap(<%= raw @location_hash.to_json %>);
  </script>

