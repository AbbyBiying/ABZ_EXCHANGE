<div class="session">
  <p>If you have items or services to exchange we can help you connect with interested people!</p>
  <%= form_for :session, url: session_path do |form| %>
    <div>
      <%= form.label :username%>
      <%= form.text_field :username %>
    </div>

    <div>
      <%= form.label :password %>
      <%= form.password_field :password %>
    </div>

    <div>
      <%= form.submit "Sign in" %>
    </div>
  <% end %>
<br>
<canvas data-processing-sources=<%= asset_path 'ball.pde' %>></canvas>
</div>
