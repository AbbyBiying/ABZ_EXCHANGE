<div class="session">
  <%= form_for :session, url: session_path do |form| %>
    <div>
      <%= form.label :username%>
      <%= form.text_field :username %>
    </div>

    <div>
      <%= form.label :password %>
      <%= form.password_field :password %>
    </div>

    <div>
      <%= form.submit "Sign In" %>
    </div>
  <% end %>
</div>

<div class="session-introduction">
  <%= render "homes/introduction" %>
</div>
