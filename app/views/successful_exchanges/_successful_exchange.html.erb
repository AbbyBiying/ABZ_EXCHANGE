<div class="content-group"> 
  <div class="exchange-listing">
    <%= link_to successful_exchange.listing.user do %>
      <div class="content-image">
        <%= image_tag successful_exchange.listing.avatar.url if successful_exchange.listing.avatar? %>
      </div>

      <p class="content-name">Listing: <%= successful_exchange.listing.name %></p>
      <p>Description: <%= successful_exchange.listing.description %></p>
    <% end %>
    <p>posted by <%= link_to successful_exchange.listing.username, successful_exchange.listing.user %></p>
  </div>

  <div class="exchange-offer">
    <%= link_to successful_exchange.offer.user do %>
      <div class="content-image">
        <%= image_tag successful_exchange.offer.avatar.url if successful_exchange.offer.avatar? %>
      </div>

      <p class="content-name">Offer: <%= successful_exchange.offer.name %></p>
      <p>Description: <%= successful_exchange.offer.description %></p>
    <% end %>
    <p>posted by <%= link_to successful_exchange.offer.username, successful_exchange.offer.user %></p>
  </div>

  <!-- <p> This successful exchange was made on <%= successful_exchange.created_time %></p> -->
  <br>
</div>
