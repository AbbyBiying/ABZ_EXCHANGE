<div class="successful-exchange">
  <%= link_to successful_exchange.listing do %>
    Listing name: <%= successful_exchange.listing.name %>,
      description: <%= successful_exchange.listing.description %>
    <p><%= image_tag successful_exchange.listing.url, width:"200" %></p>
  <% end %>

  <%= link_to successful_exchange.offer.user do %>
    Offer name: <%= successful_exchange.offer.name %>,
      description: <%= successful_exchange.offer.description %>
    <p><%= image_tag successful_exchange.offer.url, width:"200" %></p>
  <% end %>
</div>
