<%= form_for current_user do |form| %>
  <% if current_user.errors.any? %>
    <%= pluralize(current_user.errors.count, "error") %> prevented your account from being created:
    <ul>
      <% current_user.errors.full_messages.each do |error_message| %>
        <li><%= error_message %></li>
      <% end %>
    </ul>
  <% end %>

  <div>
    <%= form.label :username %>
    <%= form.text_field :username %>
  </div>

  <div>
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>

  <div>
    <%= form.label :bio %>
    <%= form.text_area :bio %>
  </div>

  <div>
    <%= form.collection_select :location_id, Location.all, :id, :city, prompt: true %>
  </div>

  <h4> Location not listed? </h4>
  <%= form.fields_for :location do |location_form| %>
    <%= location_form.label :city %>
    <%= location_form.text_field :city %>
  <% end %>

  <div>
    <%= form.label :bio %>
    <%= form.text_area :bio %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
