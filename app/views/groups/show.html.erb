<%= render @group %>
<div class="user">
  <div>
    <%= button_to "Edit This Group", edit_group_path(@group), method: :get %>
  </div>

  <div>
    <%= button_to "Delete This Group", group_path(@group), method: :delete, data: { confirm: 'Are you sure you want to delete this group?' } %>
  </div>

  <h3>Comment:</h3>
  <%= form_for @comment do |c| %>
    <%= c.hidden_field :commentable_type, value: "Group" %>
    <%= c.hidden_field :commentable_id, value: @group.id %>
    <%= c.text_area :body, placeholder: "type comment" %>
    <%= c.submit %>
  <% end %>

</div>
<%= render @group.comments.by_most_recent %>
