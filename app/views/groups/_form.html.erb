<div class="new-form">
  <%= form_for group do |form| %>
    <%= render "application/form_errors", object: group %>

    <div class="input-container">
      <%= form.label :name %>
      <%= form.text_area :name%>
    </div>

    <div class="input-container">
      <%= form.label :description %>
      <%= form.text_area :description %>
    </div>

    <div class="submit-button">
      <%= form.button "Submit", :class => "button" %>
    </div>
  <% end %>
</div>
 