<div class="form">
  <%= form_for group do |form| %>
    <%= render "application/form_errors", object: group %>

    <div>
      <%= form.label :name, style: "display: none;" %>
      <%= form.text_area :name, placeholder: "type group name"%>
    </div>

    <div>
      <%= form.label :description, style: "display: none;" %>
      <%= form.text_area :description, placeholder: "type group description" %>
    </div>

    <%= form.submit %>
  <% end %>
</div>
