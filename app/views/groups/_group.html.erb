<div class="listing listing-description">
  <%= link_to group do %>
    <p><strong>Group name: </strong><%= group.name %></p>
    <p><strong>Group description: </strong><%= group.description %></p>
  <% end %>
  <p><strong>posted by <%= link_to group.user.username, group.user %></p>
  <p>was created at <%= group.created_time %></p>
</div>

<% if group.comments.any? %>
  <h4>Comments:</h4>
  <div class="comment">
    <% group.comments.each do |c| %>
      <%= c.body %>
      <p>posted by <%= link_to c.username, c.user %>,
        at <%= c.created_time %></p>
    <% end %>
  </div>
<% end %>
